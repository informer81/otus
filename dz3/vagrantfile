# -*- mode: ruby -*-
# vi: set ft=ruby :

$script = <<-SCRIPT
sudo yum install epel-release mc  xfsdump -y &&
sudo yum install mdadm iotop htop sysstat -y &&
sudo yum upgrade -y
SCRIPT

$script2 = <<-SCRIPT
sudo -s &&
pvcreate /dev/sdb &&
vgcreate vg_root /dev/sdb &&
vgcreate -n lv_root -l +100%FREE /dev/vg_root &&
mkfs.xfs /dev/vg_root/lv_root &&
mount /dev/vg_root/lv_root /mnt
SCRIPT

Vagrant.configure(2) do |config|
  config.vm.box = "centos/7"
  config.vm.provision "shell", inline: $script
  config.vm.provision "shell", inline: $script2
  config.vm.box_version = "1804.2"

  config.vm.provider "virtualbox" do |v|
    v.memory = 512
    v.cpus = 1
         
  file_to_disk = 'disk2.vdi'
    unless File.exist?(file_to_disk)
          v.customize ['createhd', '--filename', file_to_disk, '--size', 30 * 1024]
          v.customize ["storagectl", :id, "--name", "SATA Controller", "--add", "sata"]
    end
    v.customize ['storageattach', :id, '--storagectl', 'SATA Controller', '--port', 1, '--device', 0, '--type', 'hdd', '--medium', file_to_disk]

    file_to_disk = 'disk3.vdi'
    unless File.exist?(file_to_disk)
          v.customize ['createhd', '--filename', file_to_disk, '--size', 30 * 1024 ]
    end
    v.customize ['storageattach', :id, '--storagectl', 'SATA Controller', '--port', 2, '--device', 0, '--type', 'hdd', '--medium', file_to_disk]
  end
    
  config.vm.define "testlvm" do |r1|
    r1.vm.hostname = "testlvm"
  end



  
end
